{
  "css.validate": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true,
    "source.fixAll.eslint": true,
    "source.fixAll.prettier": true
  },
  // Tailwind CSS Autocomplete, add more if used in projects
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "classNames",
    "containerClassName"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "tailwindCSS.experimental.classRegex": [
    "tw\\(.*?\\).*?`([^`]*)", // tw`...`
    "tw\\.[^`]+`([^`]*)`", // tw.xxx<xxx>`...`
    "tw`([^`]*)" // tw(Component)<xxx>`...`
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript", // if you are using typescript
    "typescriptreact": "javascript" // if you are using typescript with react
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#33d09c",
    "activityBar.background": "#33d09c",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#a74ad5",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#33d09c",
    "statusBar.background": "#27a97e",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#33d09c",
    "statusBarItem.remoteBackground": "#27a97e",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#27a97e",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#27a97e99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#27A97E"
}
